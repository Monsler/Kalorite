{
    "app-id": "com.monsler.Kalorite",
    "runtime": "org.kde.Sdk",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "Kalorite",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "modules": [
        {
            "name": "Kalorite",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Monsler/Kalorite"
                }
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_TESTING=OFF"
            ]
        }
    ]
}